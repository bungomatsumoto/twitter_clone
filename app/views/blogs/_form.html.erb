<%= form_with(model: @blog, local: true, url: confirm_blogs_path) do |form| %>
  <% if @blog.errors.any? %>
    <div class="error_explanation">
      <% @blog.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <div class="blog_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to '一覧画面に戻る', blogs_path %>
